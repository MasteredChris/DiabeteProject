<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PazienteDashboardController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #4A90E2;">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>
            <VBox spacing="5">
                <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
                <Label fx:id="medicoLabel" style="-fx-text-fill: white; -fx-font-size: 18px;" />
                <Region prefHeight="10" />
                <HBox spacing="10">
                    <Button fx:id="pagina1Button" onAction="#mostraPagina1" prefHeight="50.0" prefWidth="150.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #7DFFA0; -fx-text-fill: black;" text="Glicemie e sintomi" />
                    <Button fx:id="pagina2Button" onAction="#mostraPagina2" prefHeight="50.0" prefWidth="201.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #7DFFA0; -fx-text-fill: black;" text="Terapie e assunzioni" />
                </HBox>
            </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" style="-fx-background-color: #ffffff; -fx-text-fill: #4A90E2; -fx-font-size: 16px; -fx-padding: 8 20 8 20;" text="Logout" />
        </HBox>
    </top>

    <!-- BODY -->
    <center>
        <StackPane fx:id="contentArea" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

            <!-- PAGINA 1: Rilevazioni + Eventi -->
            <HBox fx:id="pagina1" prefHeight="600" prefWidth="1000" spacing="20">
                <!-- Rilevazioni -->
                <VBox spacing="10" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Rilevazioni di glicemia" />
                    <GridPane hgap="10" vgap="10">
                        <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <DatePicker fx:id="datePicker" promptText="YYYY-MM-DD" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Momento del giorno:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ChoiceBox fx:id="tipoPastoChoice" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Valore:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="valoreField" promptText="mg/dL" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button onAction="#handleSalvaRilevazione" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Aggiungi" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Button onAction="#handleEliminaRilevazione" prefHeight="25.0" prefWidth="74.0" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Elimina" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                    <TableView fx:id="rilevazioniTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="dataColumn" prefWidth="120" text="Data" />
                            <TableColumn fx:id="tipoPastoColumn" prefWidth="150" text="Momento del giorno" />
                            <TableColumn fx:id="valoreColumn" prefWidth="100" text="Valore (mg/dL)" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Eventi clinici -->
                <VBox spacing="10" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Hai sintomi o patologie?" />
                    <TextField fx:id="descrizioneEventoField" promptText="Descrizione" />
                    <TextField fx:id="noteEventoField" promptText="Note (opzionale)" />
                    <ChoiceBox fx:id="tipoEventoChoice" prefHeight="25.0" prefWidth="128.0" />
                    <Button onAction="#handleAggiungiEvento" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Aggiungi" />
                    <TableView fx:id="eventiTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="tipoEventoColumn" prefWidth="100" text="Tipo" />
                            <TableColumn fx:id="descrizioneEventoColumn" prefWidth="200" text="Descrizione" />
                            <TableColumn fx:id="dataEventoColumn" prefWidth="100" text="Data" />
                            <TableColumn fx:id="oraEventoColumn" prefWidth="80" text="Ora" />
                            <TableColumn fx:id="noteEventoColumn" prefWidth="200" text="Note" />
                        </columns>
                    </TableView>
                </VBox>
            </HBox>

            <!-- PAGINA 2: Assunzioni + Terapie -->
            <HBox fx:id="pagina2" managed="false" prefHeight="600" prefWidth="1000" spacing="20" visible="false">
                <!-- Assunzioni -->
                <VBox spacing="10" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Assunzioni di farmaci" />
                    <GridPane hgap="10" vgap="10">
                        <Label text="Data:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <DatePicker fx:id="assunzioneDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="Ora:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="oraField" promptText="HH:mm" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <Label text="Farmaco:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <ComboBox fx:id="farmacoChoice" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1" />
                        <Label text="Quantità:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="quantitaField" promptText="unità" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button onAction="#handleSalvaAssunzione" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Aggiungi" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                        <Button onAction="#handleEliminaAssunzione" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-background-radius: 5;" text="Elimina" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                    <TableView fx:id="assunzioniTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="dataAssunzioneColumn" prefWidth="120" text="Data" />
                            <TableColumn fx:id="oraAssunzioneColumn" prefWidth="100" text="Ora" />
                            <TableColumn fx:id="farmacoAssunzioneColumn" prefWidth="200" text="Farmaco" />
                            <TableColumn fx:id="quantitaAssunzioneColumn" prefWidth="100" text="Quantità" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Terapie -->
                <VBox spacing="10" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Terapie prescritte" />
                    <TableView fx:id="terapieTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="farmacoColumn" prefWidth="150" text="Farmaco" />
                            <TableColumn fx:id="assunzioniColumn" prefWidth="120" text="Assunzioni" />
                            <TableColumn fx:id="quantitaColumn" prefWidth="120" text="Quantità" />
                            <TableColumn fx:id="indicazioniColumn" prefWidth="200" text="Indicazioni" />
                            <TableColumn fx:id="dataInizioColumn" prefWidth="100" text="Inizio" />
                            <TableColumn fx:id="dataFineColumn" prefWidth="100" text="Fine" />
                            <TableColumn fx:id="statoColumn" prefWidth="100" text="Stato" />
                        </columns>
                    </TableView>

                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Terapie Concomitanti" />
                    <HBox spacing="10">
                        <TextField fx:id="tipoTerapiaField" promptText="Tipo terapia" />
                        <TextField fx:id="descrizioneTerapiaField" promptText="Descrizione (opzionale)" />
                        <Button onAction="#handleAggiungiTerapiaConcomitante" text="Aggiungi" />
                        <Button onAction="#handleRimuoviTerapiaConcomitante" text="Rimuovi" />
                    </HBox>
                    <ListView fx:id="terapieConcomitantiList" VBox.vgrow="ALWAYS" />
                </VBox>

            </HBox>
        </StackPane>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #4A90E2; -fx-padding: 15;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Per qualsiasi dubbio contatta il medico via email." />
            <Button onAction="#handleApriContatta" style="-fx-background-color: #ffffff; -fx-text-fill: #4A90E2; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 8 20 8 20;" text="Contatta" />
        </HBox>
    </bottom>

</BorderPane>
