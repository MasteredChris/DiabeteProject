<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DiabetologoDashboardController">

    <!-- HEADER -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #4A90E2; -fx-padding: 15;">
        <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleLogout" style="-fx-background-color: #ffffff; -fx-text-fill: #4A90E2; -fx-font-size: 16px; -fx-padding: 10 20 10 20;" text="Logout" />
    </HBox>

    <!-- BODY -->
    <SplitPane dividerPositions="0.33">
        <!-- Left VBox: Pazienti + Scheda Clinica -->
        <VBox prefWidth="300" spacing="10" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Pazienti" />
                <ListView fx:id="pazientiList" prefHeight="400" />
            </VBox>

            <VBox spacing="5">
                <TitledPane text="Scheda Clinica">
                    <VBox spacing="10">
                        <Label text="Fattori di rischio:" />
                        <TextArea fx:id="fattoriRischioArea" prefRowCount="3" />

                        <Label text="Pregresse patologie:" />
                        <TextArea fx:id="patologieArea" prefRowCount="3" />

                        <Label text="Comorbidità:" />
                        <TextArea fx:id="comorbiditaArea" prefRowCount="3" />

                        <Button fx:id="salvaSchedaBtn" onAction="#handleSalvaSchedaClinica" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Aggiorna scheda clinica" />
                    </VBox>
                </TitledPane>
            </VBox>
        </VBox>

        <!-- Right VBox: pagine dinamiche -->
        <VBox prefWidth="700" spacing="10" style="-fx-padding: 10;">

            <!-- Pulsanti di cambio pagina -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#mostraPagina1" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #62C1FF; -fx-text-fill: white;" text="Andamento " />
                <Button onAction="#mostraPagina2" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #62C1FF; -fx-text-fill: white;" text="Terapie" />
            </HBox>

            <!-- Pagina 1 -->
            <VBox fx:id="pagina1" spacing="10">
                <!-- Rilevazioni -->
                <VBox spacing="5" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Rilevazioni" />
                    <TableView fx:id="rilevazioniTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="dataColumn" prefWidth="120" text="Data" />
                            <TableColumn fx:id="tipoPastoColumn" prefWidth="200" text="Tipo Pasto" />
                            <TableColumn fx:id="valoreColumn" prefWidth="150" text="Valore (mg/dL)" />
                        </columns>
                    </TableView>
                    <Label style="-fx-font-style: italic; -fx-font-size: 12px;" text="Legenda: blu = glicemia bassa, verde = normale, arancione = alta, rosso = molto alta" />
                </VBox>

                <!-- Assunzioni -->
                <VBox spacing="5" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Assunzioni" />
                    <TableView fx:id="assunzioniTable" prefHeight="150">
                        <columns>
                            <TableColumn fx:id="dataAssunzioneColumn" prefWidth="100" text="Data" />
                            <TableColumn fx:id="oraAssunzioneColumn" prefWidth="80" text="Ora" />
                            <TableColumn fx:id="farmacoAssunzioneColumn" prefWidth="150" text="Farmaco" />
                            <TableColumn fx:id="quantitaAssunzioneColumn" prefWidth="80" text="Quantità" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- Eventi clinici -->
                <VBox spacing="5" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Sintomi e patologie" />
                    <TableView fx:id="eventiTable" prefHeight="150">
                        <columns>
                            <TableColumn fx:id="tipoEventoColumn" prefWidth="120" text="Tipo" />
                            <TableColumn fx:id="descrizioneEventoColumn" prefWidth="200" text="Descrizione" />
                            <TableColumn fx:id="dataEventoColumn" prefWidth="100" text="Data" />
                            <TableColumn fx:id="oraEventoColumn" prefWidth="80" text="Ora" />
                            <TableColumn fx:id="noteEventoColumn" prefWidth="200" text="Note" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>

            <!-- Pagina 2 -->
            <VBox fx:id="pagina2" managed="false" spacing="10" visible="false">
                <VBox spacing="5" style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Terapie" />
                    <HBox spacing="15">
                        <Button fx:id="aggiungiTerapia" onAction="#handleAggiungiTerapia" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Aggiungi" />
                        <Button fx:id="modificaStato" onAction="#handleModificaStatoTerapia" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Modifica stato" />
                    </HBox>

                    <TableView fx:id="terapieTable" prefHeight="350">
                        <columns>
                            <TableColumn fx:id="farmacoColumn" prefWidth="150" text="Farmaco" />
                            <TableColumn fx:id="assunzioniColumn" prefWidth="120" text="Assunzioni" />
                            <TableColumn fx:id="quantitaColumn" prefWidth="120" text="Quantità" />
                            <TableColumn fx:id="indicazioniColumn" prefWidth="200" text="Indicazioni" />
                            <TableColumn fx:id="dataInizioColumn" prefWidth="100" text="Inizio" />
                            <TableColumn fx:id="dataFineColumn" prefWidth="100" text="Fine" />
                            <TableColumn fx:id="statoColumn" prefWidth="100" text="Stato" />
                        </columns>
                    </TableView>
                </VBox>
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Terapie Concomitanti" />
                    <ListView fx:id="terapieConcomitantiMedicoList" prefHeight="150" />
                </VBox>

            </VBox>

        </VBox>
    </SplitPane>
</VBox>
