<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.TerapiaFormController"
      spacing="10"
      alignment="CENTER_LEFT">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Inserisci nuova terapia" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Farmaco:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="farmacoField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Assunzioni giornaliere:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="assunzioniField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="QuantitÃ  per assunzione:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="quantitaField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Indicazioni:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="indicazioniField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Data inizio:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dataInizioPicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Data fine:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dataFinePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <!--<Label text="Stato:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statoCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>-->
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annulla" onAction="#handleAnnulla"/>
        <Button text="Salva" onAction="#handleSalva"/>
    </HBox>
</VBox>
